<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardIncome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header row with title and amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvIncomeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lön januari"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvIncomeCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lön"
                    android:textSize="14sp"
                    android:textColor="@color/income_green"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvIncomeAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 000 kr"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/income_green"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- Date -->
        <TextView
            android:id="@+id/tvIncomeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="31 jan 2024"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvIncomeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beskrivning av inkomsten"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <!-- Recurring info -->
        <TextView
            android:id="@+id/tvIncomeRecurring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Återkommande månadsvis"
            android:textSize="12sp"
            android:textColor="@color/primary"
            android:textStyle="italic"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnEditIncome"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Redigera inkomst"
                app:tint="@color/primary" />

            <ImageButton
                android:id="@+id/btnDeleteIncome"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Ta bort inkomst"
                app:tint="@color/error" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>